<?xml version="1.0" encoding="utf-8"?>
<com.chico.photo.library.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_square_image" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:src="@drawable/checkbox_selector" />

    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/picture"
        android:layout_alignRight="@+id/picture"
        android:src="@drawable/ic_home_gif"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_video" />

</com.chico.photo.library.widget.SquareRelativeLayout>